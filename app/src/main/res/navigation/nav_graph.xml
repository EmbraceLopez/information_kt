<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@+id/newsListFragment">

    <fragment
            android:id="@+id/newsListFragment"
            android:name="com.yeyu.information.ui.news.NewsListFragment"
            android:label="fragment_news_lsit"
            tools:layout="@layout/fragment_news_list">

        <action
                android:id="@+id/action_news_list_to_search"
                app:destination="@id/searchFragment"
                app:popEnterAnim="@anim/slide_in_right"
                app:popExitAnim="@anim/slide_out_left"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_right"/>

        <action
                android:id="@+id/action_news_list_to_login"
                app:destination="@id/loginSmsFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_news_list_to_personal"
                app:destination="@id/personalFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_news_list_to_h5"
                app:destination="@id/newsH5Detail"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
            android:id="@+id/newsH5Detail"
            android:name="com.yeyu.information.ui.news.NewsH5Fragment"
            android:label="fragment_search"
            tools:layout="@layout/fragment_h5_news">

        <action
                android:id="@+id/action_news_h5_to_login"
                app:destination="@id/loginSmsFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_news_h5_to_comment"
                app:destination="@id/commentFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
            android:id="@+id/searchFragment"
            android:name="com.yeyu.information.ui.news.SearchFragment"
            android:label="fragment_search"
            tools:layout="@layout/fragment_search">

        <action
                android:id="@+id/action_search_to_h5"
                app:destination="@id/newsH5Detail"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
            android:id="@+id/loginSmsFragment"
            android:name="com.yeyu.information.ui.login.LoginSmsFragment"
            android:label="fragment_login_sms"
            tools:layout="@layout/fragment_login_sms">

        <action
                android:id="@+id/action_login_sms_to_login_pwd"
                app:destination="@id/loginPwdFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_login_sms_to_personal"
                app:destination="@id/personalFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
            android:id="@+id/personalFragment"
            android:name="com.yeyu.information.ui.personal.PersonalFragment"
            android:label="fragment_personal"
            tools:layout="@layout/fragment_personal">

        <action
                android:id="@+id/action_personal_to_my_msg"
                app:destination="@id/myMsgFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_personal_to_setting"
                app:destination="@id/settingFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
            android:id="@+id/loginPwdFragment"
            android:name="com.yeyu.information.ui.login.LoginPwdFragment"
            android:label="fragment_login_pwd"
            tools:layout="@layout/fragment_login_pwd">

        <action
                android:id="@+id/action_login_pwd_to_find_pwd"
                app:destination="@id/findPwdFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_login_pwd_to_personal"
                app:destination="@id/personalFragment"
                app:popUpTo="@id/loginSmsFragment"
                app:popUpToInclusive="true"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
            android:id="@+id/findPwdFragment"
            android:name="com.yeyu.information.ui.login.FindPwdFragment"
            android:label="fragment_find_pwd"
            tools:layout="@layout/fragment_find_pwd"/>

    <fragment
            android:id="@+id/commentFragment"
            android:name="com.yeyu.information.ui.comment.CommentFragment"
            android:label="fragment_comment"
            tools:layout="@layout/fragment_comment">

        <action
                android:id="@+id/action_comment_to_login"
                app:destination="@id/loginSmsFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
        android:id="@+id/myMsgFragment"
        android:name="com.yeyu.information.ui.personal.MyMsgFragment"
        android:label="fragment_my_msg"
        tools:layout="@layout/fragment_my_msg"/>

    <fragment
            android:id="@+id/settingFragment"
            android:name="com.yeyu.information.ui.personal.SettingFragment"
            android:label="fragment_my_msg"
            tools:layout="@layout/fragment_setting">

        <action
                android:id="@+id/action_setting_to_new_list"
                app:destination="@id/newsListFragment"
                app:popUpTo="@id/newsListFragment"
                app:popUpToInclusive="false"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_setting_to_modify_pwd"
                app:destination="@id/modifyPwdFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

        <action
                android:id="@+id/action_setting_to_about"
                app:destination="@id/aboutFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
            android:id="@+id/modifyPwdFragment"
            android:name="com.yeyu.information.ui.personal.ModifyPwdFragment"
            android:label="fragment_modify_pwd"
            tools:layout="@layout/fragment_modify_pwd"/>

    <fragment
            android:id="@+id/aboutFragment"
            android:name="com.yeyu.information.ui.personal.AboutFragment"
            android:label="fragment_about"
            tools:layout="@layout/fragment_about"/>


</navigation>